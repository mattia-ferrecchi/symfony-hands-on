<div id="post-{{post.id}}" class= "mb-4 ">
    <div class="text-2xl">
        <a href="{{ path('app_micro_post_show', { id: post.id }) }}">
        {{ post.title }}
        </a>
    </div>
    <div class="text-xl dark:text-gray-400">
        {{ post.text }}
    </div>
    <div class="text-gray-500 dark:text-gray-400">
        {{ post.created | date("M j, Y") }}
    </div>
    <div>
        <a href="#">
            Like <span class="px-2 rounded-md bg-gray-200 dark:bg-gray-700">0</span>
        </a>
    </div>
    <div class="text-sm text-gray-500 dark:text-gray-400">
        <a href="#">user.email.com</a>
    </div>
    <div class="flex">
        <a href="{{path('app_micro_post_edit', {id:post.id})}}" class="mr-4">Edit</a>
        <a href="#" onclick="del('{{path('app_micro_post_delete', {id:post.id})}}',{{post.id}})" class="mr-4">Delete</a>
        <a href="{{path('app_micro_post_comment', {id:post.id})}}">Comment</a>
        <span class="px-2 rounded-md bg-gray-200 dark:bg-gray-700 ml-2">{{post.comments|length}}</span>        
    </div>               
</div> 