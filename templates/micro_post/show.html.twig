{% extends 'base.html.twig' %}

{% block title %}Post - {{post.title}}{% endblock %}

{% block body %}
    <h3>{{post.title}}</h3>
    <div>{{post.text}}</div>
    <div style="color:grey">
        {% if date(post.created) < date('-1 year') %}
            Older than one year
        {% else %}
            {{post.created|date('d/m/Y')}}
        {% endif %}
    </div>
    <a href="{{path('app_micro_post_edit', {id:post.id})}}">Edit</a>
    <a href="{{path('app_micro_post')}}">Back</a>    
{% endblock %}